<main>
  <div class="container">


    <h1>Welcome</h1><br>
    <h2>Please enter in an insider secret that most would not know about</h2>
    <form method="POST" action="insert/">
      <input name="company" placeholder="Company Name"><br>
      <input name="secret" placeholder="Secret"><br>
      <button class="btn btn-danger" role="submit">Share</button><br><br>
    </form>


    <% profileData.forEach(result=> { %>
      <div class="updates">


        <form method="POST" action="update/" style="display: inline;">
          <input name="updateTitle" value="<%= result.company %>"><br>
          <input name="updatePost" value="<%= result.secret %>">
          <input type="hidden" name="updateId" value="<%=result._id %>"><br>
          <button class="btn btn-danger" role="submit"><i class="bi bi-pencil">Update</i></button>
        </form>



        <form method="POST" action="delete/" style="display: inline;">
          <input type="hidden" name="deleteId" value="<%=result._id %>">
          <button class="btn btn-danger" role="submit"><i class="bi bi-trash3">Delete</i></button>
        </form>
      </div>



      <% }); %>
  </div>
